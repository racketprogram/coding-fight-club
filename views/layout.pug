          div
            ul.nav-cat
              li
                a(href='') About
              li |
              li
                a(href='/match_setup') Match
              li |
              li
                a(href='') Leaderboard
          .nav-member
            a(href='/signin')#member
              #membername Sign In
              img.profilelogo(src='../img/account.png')
      section
        .reportBug 
          a(href='/bug_report') Report a bug
        block content

      script.
        // after signed in:
        if (localStorage.getItem('username')) {
          let username = localStorage.getItem('username');
          document.getElementById('membername').innerHTML = username;
          document.getElementById('member').href = '/profile';
